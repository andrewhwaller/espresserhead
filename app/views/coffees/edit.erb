<div class="container pb-4">
  <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-4">
        <div class="card">
          <div class="card-header bg-dark text-truncate karla-style">
            <span class="card-title text-white text-uppercase"><%= @coffee.name %></span>
          </div>
          <div class="card-body karla-style pl-3 pr-3 pt-3 pb-0">
            <dl class="row">
            <div class="col-sm-12">
            <form method="POST" action="/coffees/<%= @coffee.id %>">
              <input id="hidden" type="hidden" name="_method" value="PATCH">
              <dt>Coffee Name</dt>
              <dd>
               <input class="form-control" type="text" name="name" id="coffee[name]" value="<%=@coffee.name%>" required>
              </dd>
              <dt>List</dt>
              <dd>
                <% current_list_id = @coffee.coffee_list_id %>
                <% current_list = CoffeeList.find_by_id(current_list_id) %>
                <select class="custom-select form-control" name="coffee_list_id" id="coffee[coffee_list_id]" value="<%= current_list.list_name %>" required>
                  <% @list_options = current_user.coffee_lists.all %>
                  <% @list_options.each do |list| %>
                  <option value="<%= list.id %>"><%= list.list_name %></option>
                  <%end%>
                </select>
              </dd>
              <dt>Prep Method</dt>
              <dd>
                <select class="custom-select form-control" name="prep_method" id="coffee[prep_method]" value="<%= @coffee.prep_method %>" required>
                  <option value="Espresso">Espresso</option>
                  <option value="Pourover">Pourover</option>
                  <option value="Drip">Drip</option>
                  <option value="Other">Other</option>
                </select>
              </dd>
              <dt>Origin</dt>
              <dd>
                <input class="form-control" type="text" name="origin" id="coffee[origin]" value="<%=@coffee.origin%>" required>
              </dd>
              <dt>Roast</dt>
              <dd>
                <select class="custom-select form-control" name="roast" id="coffee[roast]" value="<%=@coffee.roast%>" required>
                  <option value="Light">Light</option>
                  <option value="Medium">Medium</option>
                  <option value="Medium Dark">Medium Dark</option>
                  <option value="Dark">Dark</option>
                </select>
              </dd>
              <dt>User rating</dt>
              <dd>
                <select class="custom-select form-control" name="rating" id="coffee[rating]" placeholder="<%=@coffee.rating%>" required>
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                </select>
              </dd>
              <dt>Notes</dt>
              <dd class="text-truncate">
                <textarea class="form-control" name="notes" id="coffee[notes]"><%=@coffee.notes%></textarea>
              </dd>
            </dl>
          </div>
          <div class="card-footer">
            <div class="row">
              <div class="col-sm-6">
                <form method="GET" action='#'>
                  <input class="btn btn-dark form-control btn-block karla-style" type="submit" name="submit" value="Save">
                </form>
              </div>
            <div class="col-sm-6">
              <form method="POST" action='/coffees/<%= @coffee.id %>/delete'>
                <input type="hidden" name="_method" value="DELETE">
                <input class="btn btn-danger form-control btn-block karla-style" type="submit" value="Delete coffee">
              </form>
            </div>
          </div>     
        </div>
      </div>
    </div>
  </div>
</div>
</div>