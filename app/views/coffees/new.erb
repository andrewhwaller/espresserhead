<div class="container mb-5">
  <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-4" style="width: 30rem;">
        <div class="card mb-4">
          <div class="card-header bg-primary text-truncate">
            <span class="card-title text-white text-uppercase">Add a new coffee</span>
          </div>
          <div class="card-body karla-style">
            <dl class="row">
            <div class="col-sm-12">
            <form method="POST" action="/coffees">
              <dt>Coffee Name</dt>
              <dd>
               <input class="form-control" type="text" name="name" id="coffee[name]" placeholder="e.g., Pike Place Roast" required>
              </dd>
              <dt>List</dt>
              <dd>
                <select class="custom-select form-control" name="coffee_list_id" id="coffee[coffee_list_id]" required>
                  <option value="" disabled selected>Select a list for your new coffee</option>
                  <% @list_options = current_user.coffee_lists.all %>
                  <% @list_options.each do |list| %>
                  <option value="<%= list.id %>"><%= list.list_name %></option>
                  <%end%>
                </select>
              </dd>
              <dt>Prep Method</dt>
              <dd>
                <select class="custom-select form-control" name="prep_method" id="coffee[prep_method]" required>
                  <option value="" disabled selected>Select a preferred brew style</option>
                  <option value="Espresso">Espresso</option>
                  <option value="Pourover">Pourover</option>
                  <option value="Drip">Drip</option>
                  <option value="Other">Other</option>
                </select>
              </dd>
              <dt>Origin</dt>
              <dd>
                <input class="form-control" type="text" name="origin" id="coffee[origin]" placeholder="e.g., Ethiopia" required>
              </dd>
              <dt>Roast</dt>
              <dd>
                <select class="custom-select form-control" name="roast" id="coffee[roast]" required>
                  <option value="" disabled selected>Select roast type</option>
                  <option value="Light">Light</option>
                  <option value="Medium">Medium</option>
                  <option value="Medium Dark">Medium Dark</option>
                  <option value="Dark">Dark</option>
                </select>
              </dd>
              <dt>User rating</dt>
              <dd>
                <select class="custom-select form-control" name="rating" id="coffee[rating]" required>
                  <option value="" disabled selected>Rate this coffee</option>
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                </select>
              </dd>
              <dt>Notes</dt>
              <dd class="text-truncate">
                <textarea class="form-control" name="notes" id="coffee[notes]" placeholder="Notes on coffee, e.g., prep tips, recipes, ratios, etc."></textarea>
              </dd>
            </dl>
          </div>
          <div class="card-footer">
            <div class="row">
              <div class="col-sm-6">
                  <input class="btn bg-success text-white form-control btn-block karla-style" type="submit" name="submit" value="Save coffee">
                </form>
              </div>
            <div class="col-sm-6">
              <button href="/coffeelists" class="btn bg-danger form-control btn-block karla-style text-white" type="submit" value="Cancel">Cancel</button>
            </div>
          </div>     
        </div>
      </div>
    </div>
  </div>
</div>
