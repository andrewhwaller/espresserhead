<div class="row m-auto">
  <div class="col">
    <h4>
      <%= @coffeelist.list_name %>
      <small class="text-muted"><%=@coffeelist.coffees.count%> entries</small>
    </h4>
  </div>
</div>
<div class="d-inline-flex flex-row flex-sm-wrap">
<% @coffeelist.coffees.each do |listed_coffee| %>
<div class="card navbar-karla-style-link m-sm-3" style="width: 30rem;">
      <div class="card-header bg-success text-truncate">
        <h5><%= listed_coffee.name %></h5>
      </div>
      <div class="card-body">
        <div class="card-text">
          <dl class="row">
            <dt class="col-sm-5">Prep Method</dt>
              <dd class="col-sm-7"><%= listed_coffee.prep_method %></dd>
            <dt class="col-sm-5">Origin</dt>
              <dd class="col-sm-7"><%= listed_coffee.origin %></dd>
            <dt class="col-sm-5">Roast</dt>
              <dd class="col-sm-7"><%= listed_coffee.roast %></dd>
            <dt class="col-sm-5">User rating</dt>
              <dd class="col-sm-7"><%= listed_coffee.rating %></dd>
            <dt class="col-sm-5 text-truncate">Notes</dt>
              <dd class="col-sm-7"><p><%= listed_coffee.notes %></p></dd>
          </dl>
        </div>
      </div>
      <div class="row justify-content-center m-sm-2 mb-sm-4">
        <div class="col-md-6">
          <form method="GET" action='#'>
            <input class="btn btn-dark form-control btn-block navbar-karla-style-link" type="submit" name="submit" value="Edit coffee">
          </form>
        </div>
        <div class="col-md-6">
          <form method="POST" action='#'>
            <input type="hidden" name="_method" value="DELETE">
            <input class="btn btn-danger form-control btn-block navbar-karla-style-link" type="submit" value="Delete coffee">
          </form>
        </div>
      </div>
    </div>  
    <% end %>
    </div>