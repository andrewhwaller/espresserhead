<div class="container pb-4">
  <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-4">
        <div class="card">
          <div class="card-header bg-primary text-truncate">
            <span class="card-title text-white text-uppercase">Create a new list</span>
          </div>
          <div class="card-body karla-style pl-3 pr-3 pt-3 pb-0">
            <dl class="row">
            <div class="col-sm-12">
            <form method="POST" action="/coffeelists">
              <dt>List Name</dt>
              <dd>
               <input class="form-control" type="text" name="list_name" id="coffeelist[name]" placeholder="e.g., My Favorite Espresso Roasts" required>
              </dd>
              <dt>List Description</dt>
              <dd class="text-truncate">
                <textarea class="form-control" name="list_description" id="coffeelist[list_description]" placeholder="Type a description of your list here." required></textarea>
              </dd>
            </dl>
          </div>
          <div class="card-footer">
            <div class="row">
              <div class="col-sm-6">
                  <input class="btn bg-success text-white form-control btn-block karla-style" type="submit" name="submit" value="Save list">
                </form>
              </div>
            <div class="col-sm-6">
              <button href="/coffeelists" class="btn bg-danger form-control btn-block karla-style text-white" type="submit" value="Cancel">Cancel</button>
            </div>
          </div>     
        </div>
      </div>
    </div>
  </div>
</div>