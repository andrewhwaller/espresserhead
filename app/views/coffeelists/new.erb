<div class="container">
  <div class="row justify-content-center karla-style">
    <h2 class="align-content-center"> New List </h2>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4 col-xl-4" style="width: 30rem;">
      <div class="card mb-4">
        <div class="card-header bg-success text-truncate">
          <form method="POST" action="/coffeelists">
            <input placeholder="List name" type="text" name="list_name" id="coffeelist[list_name]">
        </div>
        <div class="card-body karla-style">
          <dl class="row">
            <dt class="col-sm-12">List description</dt>
              <dd class="col-sm-12 text-truncate">
                <textarea class="form-control" type="text" name="list_description" id="coffeelist[list_description]" placeholder="Type a description of your list here." required></textarea>
              </dd>
          </dl>
        </div>
        <div class="card-footer">
          <div class="row">
            <div class="col-md-6">
              <input class="btn btn-success form-control karla-style" type="submit" value="Save">
            </div>
            <div class="col-md-6">
              <a href="/coffeelists" class="btn btn-danger form-control karla-style" role="button" value="Cancel">Cancel</a>
            </div>
            </form>
          </div>     
        </div>
      </div>
    </div>
  </div>
</div>