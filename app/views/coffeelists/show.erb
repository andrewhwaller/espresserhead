<% @coffeelists.each do |list| %>
    <div class="card m-auto navbar-karla-style-link" style="width: 30rem;">
      <div class="card-header bg-warning">
        <a href='/coffeelists/<%=list.id%>' class="card-title text-dark text-uppercase"><%= list.list_name %></a></h5>
      </div>
      <div class="card-body">
        <div class="card-text">
          <%=list.list_description%>
        </div>
      </div>
       <div class="row justify-content-center m-sm-2 mb-sm-4">
          <div class="col-md-6">
            <form method="GET" action='/coffeelists/<%=list.id%>/edit'>
              <input class="btn btn-dark form-control btn-block navbar-karla-style-link" type="submit" name="submit" value="Edit list">
            </form>
          </div>
          <div class="col-md-6">
            <form method="POST" action='/coffeelists/<%=list.id%>/delete'>
              <input type="hidden" name="_method" value="DELETE">
              <input class="btn btn-danger form-control btn-block navbar-karla-style-link" type="submit" value="Delete list">
            </form>
          </div>
        </div>
    </div>  
<% end %>