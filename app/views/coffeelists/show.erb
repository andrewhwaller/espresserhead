<div class="col w-100">
  <div class="row m-auto">
    <h6 class="karla-style">
      <strong><%= current_user.username %>'s Coffee Lists</strong>
      <br>
      <small class="text-muted"><%= current_user.coffee_lists.all.count %> list(s)</small>
      <br>
      <a class="btn btn-success m-auto" href="/coffeelists/new"><i class="far fa-plus-square"></i> Add a list</a>
    </h6>
  </div>
</div>
<div class="container mb-5">
  <div class="row justify-content-center">
    <% @coffeelists.each do |list| %>
      <div class="col-md-6 col-lg-4 col-xl-4" style="width: 30rem;">
        <div class="card h-100 mb-4">
          <div class="card-header bg-primary text-truncate">
            <a href='/coffeelists/<%=list.id%>' class="card-title text-white text-uppercase"><%= list.list_name %></a>
          </div>
          <div class="card-body karla-style">
            <div class="row">
              <div class="col-12">
                <div class="card-text karla-style">
                  <%=list.list_description%>
                </div>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <div class="row">
              <div class="col-sm-6">
                <form method="GET" action='/coffeelists/<%= list.id %>/edit'>
                  <input class="btn btn-dark form-control btn-block karla-style" type="submit" name="submit" value="Edit list">
                </form>
              </div>
            <div class="col-sm-6">
              <form method="POST" action='/coffeelists/<%=list.id%>/delete'>
                <input type="hidden" name="_method" value="DELETE">
                <input class="btn btn-danger form-control btn-block karla-style" type="submit" value="Delete list">
              </form>
            </div>
          </div>     
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>